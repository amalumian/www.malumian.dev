---
type Props = {
  name: string;
  width?: string;
  height?: string;
  block?: boolean;
};

const {name, width = '2rem', height = '2rem', block = false} = Astro.props;
---

<svg
  width={width}
  height={height}
  aria-hidden='true'
  class={block ? 'block' : ''}
>
  <use xlink:href={`#${name}`}></use>
</svg>

<style>
  .block {
    display: block;
  }
</style>
