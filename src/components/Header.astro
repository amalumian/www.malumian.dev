---
import { Image } from 'astro:assets';

import Logo from '@/assets/logo.svg';
import { ROUTES } from '@/consts';

import HeaderLink from './HeaderLink.astro';
import Icon from './Icon.astro';
---

<header class="header">
	<div class="wrapper">
		<a href="/" aria-label="Logo: Arthur Malumian">
			<Icon name="logo" width="10rem" height="4.8rem" />
		</a>
		<nav class="nav">
			<ul class="nav-list">
				{
					ROUTES.map((route) => (
						<li class="nav-item">
							<HeaderLink href={route.link}>{route.name}</HeaderLink>
						</li>
					))
				}
			</ul>
		</nav>
	</div>
</header>

<style>
	.header {
		border-bottom: var(--border);
	}

	.wrapper {
		position: relative;
		margin: 0 auto;
		padding: 2rem;
		max-width: 760px;
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		align-items: center;
		gap: 2rem;
	}

	.nav-list {
		display: flex;
		margin: 0;
		font-family: var(--font-family-sans-serif-condensed);
		list-style: none;
		padding: 0;
		gap: 2rem;
		text-transform: uppercase;
		font-weight: bold;
	}

	@media only screen and (max-width: 500px) {
		.wrapper {
			justify-content: center;
			flex-direction: column;
			gap: 1rem;
		}
	}
</style>
